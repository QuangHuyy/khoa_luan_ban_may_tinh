@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using BanMayTinh.Models.DB
@model BanMayTinh.Models.ProductsModel


<div style="padding-top:20px;">
    <div class="row">
        <div class="col-md-10">
            <h4 style="font-size:xx-large">Danh Sách Sản Phẩm </h4>
        </div>
        <div class="text-right col-md-1" style="padding-bottom: 5px">
            <a href="@Url.Action("Create", "SanPham")" class=" btn btn-success"> Thêm Sản Phẩm </a>
            @*<a href="@Url.Action("#", "SanPham")" class=" btn btn-danger">Xóa Sản Phẩm Đã Chọn</a>*@
        </div>
    </div>
</div>
<div class="box1">
    @if (Model.danhSach.Count > 0)
    {
        int count = Model.danhSach.Count;
        for (int i = count - 1; i >= 0; i--)
        {
            <div class="col_1_of_5 span_1_of_5">
                <a href="single.html">
                    <div class="view view-fifth">
                        <div class="top_box">
                            @*<p class="m_2"></p>*@
                            @*<input type="checkbox" name="check" />*@
                            <div style="padding-left: 75px; padding-bottom: 10px">
                                <a href="@Url.Action("Details", "SanPham", new { id = Model.danhSach.ElementAt(i).Id })" class="text-primary">Xem</a>
                                <a href="@Url.Action("Edit", "SanPham", new { id = Model.danhSach.ElementAt(i).Id })" class="text-success">Sửa</a>
                                <a href="@Url.Action("#", "SanPham", new { id = Model.danhSach.ElementAt(i).Id })" class="text-danger">Xóa</a>
                            </div>
                            <div class="grid_img">
                                <div class="css3" style="padding-bottom:10px">
                                    <img style="max-height: 150px; max-width: 150px"
                                         src="~/Content/images/AnhSanPham/@Model.danhSach.ElementAt(i).AnhSanPham" alt="" />
                                </div>
                                <h3 class="m_1">@Model.danhSach.ElementAt(i).TenSanPham</h3>
                            </div>

                        </div>
                    </div>
                </a>
            </div>
        }
    }
    else
    {
        <div style="padding-top:20px;"> <h4>Shop của bạn hiện chưa có sản phẩm </h4></div>
    }
</div>