    </div>*@

<div class="anh">
    @foreach (var item in Model.AnhSanPhams)
    {
        <div class="anh_div">
            <img class="img" alt="@item.UR_Anh" src="/Content/images/AnhSanPham/@item.UR_Anh" />
        </div>
    }
</div>


<div class="tb">
    <div style="display: flex">
        <div class="label-info">Tên sản phẩm: </div>
        <div class="value-info">@Html.DisplayFor(model => model.TenSanPham)</div>
