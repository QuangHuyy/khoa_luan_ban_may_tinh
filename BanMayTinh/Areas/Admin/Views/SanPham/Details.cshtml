@model BanMayTinh.Models.DB.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .btn_sua {
        background: #2ca01c;
        display: block;
        color: #fff;
        padding: 12px 20px;
        border: 2px solid #000000;
        border-radius: 4px;
        font-size: 16px;
        margin-top: 2%;
        margin-left: 81%;
        margin-right: 8%;
    }

        .btn_sua:hover {
            background-color: #a4a4a4;
        }

        .btn_sua a {
            color: #fff;
            padding: 12px;
            font-size: 15px;
            text-align: center;
            margin: 0 0 30px;
            border-radius: 3px;
            text-decoration: none;
        }

    .anh {
        display: flex;
        margin-top: 2%
    }

        .anh .anh_div {
            border: 1px solid #a4a4a4;
            margin: 10px;
            border-radius: 4px;
        }

            .anh .anh_div:hover {
                border: 4px solid #47f9f7;
                margin: 7px;
            }

            .anh .anh_div .img {
                width: 150px;
                height: 150px;
            }

                .anh.anh_div .img:focus {
                    width: 200px;
                    height: 200px;
                }

    .tb {
        margin-top: 20px;
        margin-bottom: 15%;
    }

        .tb .label-info {
            border: 1px solid #c7c7c7;
            padding: 15px 30px;
            width: 20%;
            margin-left: 0%;
            font-weight: bold;
            background-color: #e5e8ec !important;
        }

            .tb .label-info:hover {
                background-color: #dbf7f1 !important;
            }

        .tb .value-info {
            width: 72%;
            border: 1px solid #c7c7c7;
            padding: 15px 30px;
            color: #000000
        }

            .tb .value-info:hover {
                background-color: #dbf7f1 !important;
            }
</style>

<div>
    <div>
        <strong class="text-uppercase text-danger" style="font-size: x-large">@Html.DisplayFor(model => model.TenSanPham)</strong>
    </div>
    <div class="btn_sua">
        <a href="@Url.Action("Edit", "SanPham", new { id = Model.Id })">Chỉnh sửa</a>
    </div>
</div>

