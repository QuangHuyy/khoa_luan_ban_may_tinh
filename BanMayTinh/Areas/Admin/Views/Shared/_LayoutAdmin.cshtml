<!DOCTYPE html>
<html>
<head>
    <title>ADMIN | Bán Laptop</title>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/css/form.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/all.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link href="~/Content/css/giohang.css" rel="stylesheet" type="text/css" />
    @RenderSection("head", required: false)
</head>
<body>

    <div class="header-top">
        <div class="wrap">
            <div class="logo">
                <a href="index.html"><img src="~/Content/images/laptop/logo.png" alt="" /></a>
            </div>
            <div class="cssmenu">
                <ul>
                    <li><a href="@Url.Action("GioHang", "Cart")">Giỏ hàng</a></li>
                    @if (Session["LogIn"] != null)
                    {
                        <li class="active"><a href="@Url.Action("DangXuat", "Home")">Đăng xuất</a></li>
                    }
                    else
                    {
                        <li class="active"><a href="@Url.Action("LogIn", "Home")">Đăng nhập</a></li>
                    }

                </ul>
            </div>
            <div class="clear"></div>
        </div>
        <hr width="100%">
    </div>
    <div class="content">
        <div class="left-20">
            <div class="list-group" style="padding-left: 10px">
                <ul>
                    <li>
                        <a  href="@Url.Action("Index", "DonDatHang")" class="list-group-item list-group-item-action">
                            Quản Lý Đơn Hàng
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "LoaiSanPham")" class="list-group-item list-group-item-action">
                            Loại Sản Phẩm
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "SanPham")" class="list-group-item list-group-item-action">
                            Danh Sách Sản Phẩm
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="left-80">
            @RenderBody()
        </div>
    </div>

    @* <div class="card">
        <div class="card-header">
            <div class="row">

            </div>
        </div>
    </div> *@

@RenderSection("footer", required: false)
</body>
</html>
